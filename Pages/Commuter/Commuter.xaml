<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="JRoute.Pages.Commuter.Commuter">

    <Grid>
        <!-- ✅ Fullscreen Map -->
        <maps:Map x:Name="MyMap"
                  MapType="Street"
                  IsShowingUser="True" />

        <!-- ✅ Top Layer: Point A → Point B pill textfields -->
        <StackLayout Padding="20,40,20,0"
                     VerticalOptions="Start">

            <!-- Point A -->
            <Border BackgroundColor="#4AB7E5"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30,30,0,0" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.3" Radius="5" Offset="0,2" />
                </Border.Shadow>
                <Entry Placeholder="Point A"
                    PlaceholderColor="#ffffffff"
                    BackgroundColor="Transparent"
                    ClearButtonVisibility="WhileEditing"
                    Margin="10,5" />
            </Border>

            <!-- Point B -->
            <Border BackgroundColor="#F7B731"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0,0,30,30" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.3" Radius="5" Offset="0,2" />
                </Border.Shadow>
                <Entry Placeholder="End Location"
                    PlaceholderColor="#ffffffff"
                    BackgroundColor="Transparent"
                    ClearButtonVisibility="WhileEditing"
                    Margin="10,5" />
            </Border>
        </StackLayout>
    </Grid>
</ContentPage>